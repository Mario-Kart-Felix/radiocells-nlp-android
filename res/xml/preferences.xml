    <PreferenceCategory android:title="Operation mode" >
        <ListPreference
            android:defaultValue="online"
            android:entries="@array/listentries"
            android:entryValues="@array/listvalues"
            android:key="mode"
            android:summary="When using offline mode, be sure to press 'Update offline database' below. Online mode queries the openbmap geolocation service and requires mobile data access"
            android:title="Online/offline mode" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Geolocation database" >

        <ListPreference
            android:defaultValue="none"
            android:key="data.ref_database"
            android:summary="Select a offline database\nIf none is available, click 'Update offline database'"
            android:title="Offline database" >
        </ListPreference>

        <Preference
            android:key="data.download_wifi_catalog"
            android:summary="Click to download the latest offline geolocation database\n(approx. 400 MB)"
            android:title="Update offline database" >
        </Preference>

        <Preference android:title="Database folder"
            android:key="data.dir"
            android:summary="Choose folder for offline database"/>

        <!--<EditTextPreference
            android:defaultValue="/org.openbmap.unifiednlp/"
            android:dialogMessage="Enter folder"
            android:key="data.dir"
            android:summary="Choose folder for offline database"
            android:title="Database folder" />
        -->

    </PreferenceCategory>
    <PreferenceCategory android:title="Debug" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="acra.enable"
            android:summaryOff="Don't send crash reports"
            android:summaryOn="Send crash reports"
            android:title="Crash reports" />
    </PreferenceCategory>
</PreferenceScreen>